<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools=" http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:layout_width="wrap_content"
    android:layout_height="80dp"
    android:padding="0dp"
    android:clickable="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/topLeftContainer"
        android:layout_width="63dp"
        android:layout_height="match_parent"
        android:background="#04D292"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dayNumberTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="24"
            fontPath="fonts/Roboto-Regular.ttf"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/monthNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:autoText="false"
            android:text="Mayo"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/yearNumberTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="2014"
            android:textColor="#FFFFFF"
            fontPath="fonts/Roboto-Light.ttf"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/hourStringTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="16:30 hrs"
            android:textColor="#FFFFFF"
            fontPath="fonts/Roboto-Regular.ttf"
            android:textSize="11sp" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rightContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/topLeftContainer">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/localContainer"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconLocal"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:src="@drawable/rivericon"
                />

            <TextView
                android:id="@+id/localTeamNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iconLocal"
                android:layout_gravity="center_horizontal"
                android:text="River Plate"
                fontPath="fonts/Roboto-Black.ttf"
                android:textColor="#000000"
                android:textSize="12sp" />


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/middleContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/resultTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Copa Chile"
                    android:textColor="#696969"
                    android:gravity="center"
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/resultSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Grupo 1 - Fecha 3"
                    fontPath="fonts/Roboto-Regular.ttf"
                    android:textColor="#696969"
                    android:textSize="10sp" />
            </LinearLayout>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/localScoreTxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#696969"
                    android:gravity="left"
                    fontPath="fonts/Roboto-Black.ttf"
                    android:textSize="21sp" />

                <TextView
                    android:id="@+id/visitorScoreText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0"
                    fontPath="fonts/Roboto-Black.ttf"
                    android:textColor="#696969"
                    android:textSize="21sp" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/visitorLayout">

            <ImageView
                android:id="@+id/iconVisitor"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="21dp"
                android:src="@drawable/racingicon"
                />

            <TextView
                android:id="@+id/visitorTeamTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Racing"
                fontPath="fonts/Roboto-Black.ttf"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>