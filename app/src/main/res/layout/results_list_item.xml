<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:padding="0dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/topLeftContainer"
        android:layout_width="63dp"
        android:layout_height="match_parent"
        android:background="#04D292"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dayNumberTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="24"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/monthNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:autoText="false"
            android:text="Mayo"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/yearNumberTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="2014"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/hourStringTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="16:30 hrs"
            android:textColor="#FFFFFF"
            android:textSize="11sp" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rightContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/topLeftContainer">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/localContainer"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="21dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iconLocal"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/rivericon"
                 />

            <TextView
                android:id="@+id/localTeamNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Racing"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/middleContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tournamentTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copa Chile"
                android:textColor="#696969"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/dateTitleTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grupo 1 - Fecha 3"
                android:textColor="#696969"
                android:textSize="10sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/localScoreTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="35dp"
            android:layout_centerHorizontal="true"
            android:text="3"
            android:textColor="#696969"
            android:textSize="21sp"
            android:paddingRight="40dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="34dp"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:id="@+id/visitorLayout">

            <ImageView
                android:id="@+id/iconVisitor"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/racingicon"
                 />

            <TextView
                android:id="@+id/visitorTeamTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iconLocal"
                android:layout_gravity="center_horizontal"
                android:text="River Plate"
                android:textColor="#000000"
                android:textSize="12sp" />
        </LinearLayout>
        <TextView
            android:id="@+id/visitorScoreText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="35dp"
            android:textColor="#696969"
            android:textSize="21sp"
            android:paddingLeft="10dp" />
    </RelativeLayout>

</RelativeLayout>